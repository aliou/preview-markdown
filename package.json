{
  "name": "preview-markdown",
  "version": "0.4.1",
  "description": "Terminal markdown pager with syntax highlighting",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "pmd": "src/index.ts"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "lint": "biome check",
    "format": "biome check --write",
    "typecheck": "tsc --noEmit",
    "build": "node scripts/build.mjs",
    "changeset": "changeset",
    "version": "node scripts/version.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.0.0",
    "tsdown": "^0.21.0-beta.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mariozechner/pi-tui": "^0.53.0",
    "beautiful-mermaid": "^0.1.3",
    "chalk": "^5.6.2",
    "shiki": "^3.20.0"
  }
}
