{
  "name": "preview-markdown",
  "version": "0.2.0",
  "description": "Terminal markdown pager with syntax highlighting",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "pmd": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "lint": "biome check",
    "format": "biome check --write",
    "typecheck": "tsc --noEmit",
    "build": "bun run scripts/build.ts",
    "changeset": "changeset",
    "version": "bun run scripts/version.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/node": "^22.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mariozechner/pi-tui": "0.31.0",
    "beautiful-mermaid": "^0.1.3",
    "chalk": "^5.6.2",
    "shiki": "^3.20.0"
  },
  "patchedDependencies": {
    "@mariozechner/pi-tui@0.31.0": "patches/@mariozechner%2Fpi-tui@0.31.0.patch"
  }
}
